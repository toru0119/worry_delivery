<div class="container px-2">

  <div class="row justify-content-center">
    <div class="col-md-2.5 ribbon2">
      <h3>先輩社員一覧</h3>
    </div>
  </div>

  <div class="col-md-9 offset-md-1">
    <div class="row item_lists">
      <% @customers.each do |customer| %>
        <div class="col-md-3 item_list">
          <%= link_to member_customer_path(customer.id), class:"btn btn-success" do %>
            <%= attachment_image_tag customer, :customer, size: "200x150", format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
          <%= customer.full_name %><br>
          <%= customer.full_name_kana %><br>
          <%= customer.business_outline %>
      <% end %>
    </div>
  </div>

</div>