<div class = "container">
  <div class = "row">
    <div class = "col">
      <h4 class = "col-3 text-center" style = "background-color:lightgray">注文履歴一覧</h4>
      <table class = "table table-hover">

        <thead class = "thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) %></td>
            <td><%= order.customer.full_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.order_status_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col-3 mx-auto">
        <strong><%= paginate @order %></strong>
      </div>
    </div>
  </div>
</div>