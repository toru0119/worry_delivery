  <div class="row">

    <div class="col-2"></div>
    <div class="col-7">
      <h1>ジャンル追加</h1>
      <!--ジャンルの新規登録機能-->
      <%=form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <h2>ジャンル名</h2>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: "btn btn-success offset-1" %>
      <% end %>
      <!--end-->
      <table>
        <thead>
          <tr>
            <th>ジャンル一覧</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <!--ジャンル一覧-->
         <% @genres.each do |genre| %>
         <tr>
           <td>
            <%= genre.name %>
           </td>
           <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %>
         <% end %>
           </td>
         </tr>
         <!--end-->
        </tbody>
      </table>
    </div>
    <div class="col-3"></div>
  </div>