<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>ジャンル編集</h1>
        <%= form_with url: admin_genre_path(@genre), model: @genre, local: true do |f| %>
         <%= f.label :ジャンル名 %>
         <%= f.text_field :name, placeholder: "ジャンル名", class: "offset-1" %>
         <%= f.submit "変更を保存", class: "btn btn-success offset-1" %>
        <% end %>
    </div>
  </div>
</div>