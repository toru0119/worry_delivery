<!--レイアウト考え中-->
  <% @in_company_reports.each do |in_company_report| %>
      <%= in_company_report.body %>
  <% end %>

  <!--商品一覧-->
  <div class="top-comment">
    <div class="d-flex justify-content-center">
      <h2>~ひとやすみに是非！！~</h2>
    </div>
    <div class="d-flex justify-content-center">
      <p>※新規登録を行なっていただいてからのご注文をお願いいたします。</p>
    </div>
  </div>
  　<div class="col-md-9 offset-md-1">
      <div class="row ">
        <!--表示件数の制限-->
        <% @items.last(4).reverse.each do |item| %>
              <div class="card m-2" style="width: 15rem;">
                  <%= attachment_image_tag item, :image, format: 'jpeg', size: "150x200", class: "card-img-top" %>
                  <div class="card-body">
                    <p class="card-text"><%= item.name %></p>
                  </div>
              </div>
        <% end %>
      </div>
    </div>
    <div class="col-12 clearfix">
      <div class="float-right test-box">
        <button type="button" class="btn btn-outline-primary"><%= link_to "全ての商品を見る", items_path, class: "nav-link" %></button>
      </div>
    </div>
