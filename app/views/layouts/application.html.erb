<!DOCTYPE html>
<html>
  <head>
    <title>WorryDelivery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">
          <%= image_tag'logo.jpg', class: "logo" %>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

            <!--#管理者がログイン状態-->
            <% if admin_signed_in? %>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "ジャンル", admin_genres_path, class: "nav-link" %>
                  </li>
                </button>
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "社内報", admin_in_company_reports_path, class: "nav-link" %>
                  </li>
                </button>
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "商品", admin_items_path, class: "nav-link" %>
                  </li>
                </button>
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "新入社員一覧", admin_new_employees_path, class: "nav-link" %>
                  </li>
                </button>
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %>
                  </li>
                </button>
              </ul>
            </div>
              <!--検索フォーム-->
              <div class="nav-item navbar-collapse text-right">
              <%= form_with url: member_search_path, method: :get, local: true do |f| %>
                <%= f.text_field :keyword %>
                <%= f.submit '検索', class: "btn btn-outline-info" %>
              <% end %>
              </div>
            <!--#新入社員がログイン状態-->
            <% elsif new_employee_signed_in? %>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "新入社員一覧", member_new_employees_path, class: "nav-link" %>
                  </li>
                </button>
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "先輩社員一覧", member_customers_path, class: "nav-link" %>
                  </li>
                </button>
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "注文", member_orders_path, class: "nav-link" %>
                  </li>
                </button>
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %>
                  </li>
                </button>
              </ul>
            </div>
            <!--検索フォーム-->
              <div class="nav-item navbar-collapse text-right">
              <%= form_with url: member_search_path, method: :get, local: true do |f| %>
                <%= f.text_field :keyword %>
                <%= f.submit '検索', class: "btn btn-outline-info" %>
              <% end %>
            <!--先輩社員のログイン状態-->
            <% elsif customer_signed_in? %>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "マイページ", customers_path, class: "nav-link" %>
                  </li>
                </button>
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "新入社員一覧", new_employees_path, class: "nav-link" %>
                  </li>
                </button>
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "商品一覧", items_path, class: "nav-link" %>
                  </li>
                </button>
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "カート", cart_items_path, class: "nav-link" %>
                  </li>
                </button>
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link" %>
                  </li>
                </button>
              </ul>
            </div>
            <!--検索フォーム-->
              <div class="nav-item navbar-collapse text-right">
              <%= form_with url: search_path, method: :get, local: true do |f| %>
                <%= f.text_field :keyword %>
                <%= f.submit '検索', class: "btn btn-outline-info" %>
              <% end %>
            <!--ログインされていない場合-->
            <% else %>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "About", homes_about_path, class: "nav-link" %>
                  </li>
                </button>
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "商品一覧", items_path, class: "nav-link" %>
                  </li>
                </button>
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "新規登録", new_customer_registration_path, class: "nav-link" %>
                  </li>
                </button>
                <button type="button" class="btn btn-outline-secondary mx-1">
                  <li class="nav-item">
                      <%= link_to "ログイン", new_customer_session_path, class: "nav-link" %>
                  </li>
                </button>
              </ul>
            </div>
            <% end %>
      </nav>
    </header>
      <main>
        <%= yield %>
      </main>
  </body>
</html>
